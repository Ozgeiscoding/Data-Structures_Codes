#include <stdio.h>

// Binary Search fonksiyonu
int binarySearch(int D[], int N, int key) {
    int left = 0;
    int right = N - 1;
    int middle;

    while (left <= right) {
        middle = (left + right) / 2;

        if (key == D[middle])
            return middle;              // Değer bulundu
        else if (key > D[middle])
            left = middle + 1;          // Sağ tarafa geç
        else
            right = middle - 1;         // Sol tarafa geç
    }

    return -1; // Değer bulunamadı
}

// Ana program
int main() {
    int D[] = {2, 5, 8, 12, 16, 23, 38, 56, 72, 91}; // Artan sıralı dizi
    int N = sizeof(D) / sizeof(D[0]); // Eleman sayısı
    int key;
    int result;

    key = 5;

    result = binarySearch(D, N, key);

    if (result != -1)
        printf("%d bulundu! Indeksi: %d\n", key, result);
    else
        printf("%d dizide yok.\n", key);

    return 0;
}
